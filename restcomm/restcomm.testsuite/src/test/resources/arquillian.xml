<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

<engine>
    <property name="deploymentExportPath">target/deployments</property>
</engine>
    <container qualifier="wildfly10" default="true">
        <configuration>
            <property name="managementPort">9990</property>
            <property name="outputToConsole">true</property>
            <property name="serverConfig">standalone-sip.xml</property>
            <property name="javaVmArguments">-Dorg.jboss.server.bootstrap.maxThreads=1 -Dserver-config=${project.basedir}/target/dependency/restcomm-sip-servlets-3.2.0-89-wildfly-10.0.0.Final/standalone/configuration/standalone-sip.xml
            </property>            
        </configuration>
    </container>
        
</arquillian>
