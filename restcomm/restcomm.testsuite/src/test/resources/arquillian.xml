<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <engine>
        <property name="deploymentExportPath">target/deployments</property>
    </engine>
    <container qualifier="wildfly10-managed" default="true">
        <configuration>
            <property name="enableAssertions">false</property>
            <property name="outputToConsole">true</property>
            <property name="serverConfig">standalone-sip.xml</property>
        </configuration>
    </container>

    <container qualifier="wildfly10-remote" default="false">
        <configuration>
            <property name="managementAddress">localhost</property>
            <property name="managementPort">9990</property>
            <property name="outputToConsole">true</property>
            <property name="serverConfig">standalone-sip.xml</property>
            <property name="javaVmArguments">-agentlib:jdwp=transport=dt_socket,address=8787,server=y,suspend=y -Dorg.jboss.server.bootstrap.maxThreads=1
            </property>
        </configuration>
    </container>

</arquillian>
