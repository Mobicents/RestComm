{
    "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Fax step",	
	"type": "object",
	"properties": {
		"name":{"type": "string"},
		"kind": {"enum": ["fax"]},
		"label": {"type": "string"},
		"title": {"type": "string"},
		"text": {"type": "string"},
		"next": { "$ref": "rvdproject-schema.json#/nullOrString" },
		"to": { "$ref": "rvdproject-schema.json#/nullOrString" },
		"from": { "$ref": "rvdproject-schema.json#/nullOrString" },
		"method": {
			"oneOf":[
				{"type": "null"},
				{"enum":["GET","POST"]}
			]
		},
		"statusCallback": { "$ref": "rvdproject-schema.json#/nullOrString" },
		
		"iface": {"type": "object"}
	},
	"required": ["name","kind","label","title","text","next","to","from","method","statusCallback"]	
}

