{
    "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Record step",	
	"type": "object",
	"properties": {
		"name":{"type": "string"},
		"kind": {"enum": ["record"]},
		"label": {"type": "string"},
		"title": {"type": "string"},
		"next": { "$ref": "rvdproject-schema.json#/nullOrString" },
		"method": {
			"oneOf":[
				{"type": "null"},
				{"enum":["GET","POST"]}
			]
		},
		"timeout": {
			"oneOf":[
				{"type": "null"},
				{"type": "integer", "minimum": 1}
			]
		},
		"finishOnKey":{	
			"oneOf": [
				{"type": "null"},
				{"type": "string", "pattern": "($^)|(^[0-9*#]$)" }
			]
		},		
		"maxLength": {
			"oneOf": [
				{"type":"null"},
				{"type": "integer", "minimum":1} 
			]
		},
		"transcribe": { "$ref": "rvdproject-schema.json#/nullOrBoolean" },
		"transcribeCallback": { "$ref": "rvdproject-schema.json#/nullOrString" },
		"playBeep": { "$ref": "rvdproject-schema.json#/nullOrBoolean" },
			
		"iface": {"type": "object"}
	},
	"required": ["name","kind","label","title","next","method","timeout","finishOnKey","maxLength","transcribe","transcribeCallback","playBeep"]	
}

