{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Play step",
	"type": "object",
	"properties": {
	
		"name":{"type": "string"},
		"kind": {"enum": ["play"]},
		"label": {"type": "string"},
		"title": {"type": "string"},
		"playType": {"enum": ["local","remote"]},
		"loop": {"type": ["integer","null"]},
		"wavUrl": {"type": ["string","null"]},
		"wavLocalFilename": {"type": ["string","null"]},
			
		"isCollapsed": {"type": "boolean"},
		"iface": {"type": "object"}
	},
	"required": ["name","kind","label","title","playType","loop","wavUrl","wavLocalFilename"]	
}

