<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
  @author Orestis Tsakiridis
-->
<mapper namespace="org.mobicents.servlet.sip.restcomm.dao.OrgIdentityDao">
    <insert id="addOrgIdentity" parameterType="map">
        INSERT INTO "restcomm_org_identities" ("sid", "organization_sid", "name", "date_created", "date_updated")
        VALUES(#{sid}, #{organization_sid}, #{name}, #{date_created}, #{date_updated})
    </insert>

    <select id="getOrgIdentity" parameterType="string" resultType="hashmap">
        SELECT * FROM "restcomm_org_identities" WHERE "sid"=#{sid};
    </select>

    <select id="getOrgIdentityByOrganizationSid" parameterType="string" resultType="hashmap">
        SELECT * FROM "restcomm_org_identities" WHERE "organization_sid"=#{organization_sid};
    </select>

    <select id="getOrgIdentityByName" parameterType="string" resultType="hashmap">
        SELECT * FROM "restcomm_org_identities" WHERE "name"=#{name};
    </select>

    <update id="updateOrgIdentity" parameterType="map">
        UPDATE "restcomm_org_identities" SET "date_updated"=#{date_updated}, "name"=#{name}
        WHERE "sid"=#{sid};
    </update>

    <delete id="removeOrgIdentity" parameterType="string">
        DELETE FROM "restcomm_org_identities" WHERE "sid"=#{sid};
    </delete>
</mapper>
